<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- 
        Cleartext HTTP traffic is required for IPP protocol (Internet Printing Protocol)
        which traditionally uses HTTP on port 631/8631 without TLS.
        Restricted to local network and localhost only for security.
    -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow localhost for testing and local printer discovery -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">::1</domain>
        
        <!-- Allow .local domains for mDNS/Bonjour printer discovery -->
        <domain includeSubdomains="true">local</domain>
        
        <!-- Allow private IP ranges for local network printers -->
        <!-- Note: Android network security config doesn't support IP ranges directly,
             but .local domain covers most mDNS discovered devices -->
    </domain-config>
    
    <!-- Default: No cleartext traffic for external domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
